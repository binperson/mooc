-->
<script type="text/javascript">
  $(function(){
    $("#modify").click(function(){
      $.post("/modifyinfo",{"username":$("#usernameinfo").val(),
        "occupation":$("input[type='radio']:checked").val(),
        "autograph":$("#textareainfo").val()},function(result){
          if(result=="1"){
            window.location="/info";
          }else if(result=="-1"){
            alert("用户名被占用");
          }else if(result=="-3"){

          }
      })

    });
  });

</script>
</body>

